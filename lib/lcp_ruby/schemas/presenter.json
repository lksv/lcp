{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lcp-ruby.dev/schemas/presenter.json",
  "title": "LCP Ruby Presenter Definition",
  "description": "Schema for presenter metadata that defines UI configuration for a model (index, show, form, search, actions).",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "model": { "type": "string" },
    "label": { "type": "string" },
    "slug": { "type": "string" },
    "icon": { "type": "string" },
    "read_only": { "type": "boolean" },
    "embeddable": { "type": "boolean" },
    "index": { "$ref": "#/$defs/index_config" },
    "show": { "$ref": "#/$defs/show_config" },
    "form": { "$ref": "#/$defs/form_config" },
    "search": { "$ref": "#/$defs/search_config" },
    "actions": { "$ref": "#/$defs/actions_config" }
  },
  "required": ["name", "model"],
  "additionalProperties": false,

  "$defs": {
    "condition": {
      "description": "Condition for visible_when/disable_when: field-based, service-based, or method name string.",
      "type": ["object", "string"]
    },

    "hidden_on": {
      "oneOf": [
        { "type": "string", "enum": ["mobile", "tablet"] },
        { "type": "array", "items": { "type": "string", "enum": ["mobile", "tablet"] } }
      ]
    },

    "table_column": {
      "type": "object",
      "properties": {
        "field": { "type": "string" },
        "label": { "type": "string" },
        "width": { "type": "string" },
        "link_to": { "type": "string" },
        "sortable": { "type": "boolean" },
        "renderer": { "type": "string" },
        "options": { "type": "object" },
        "partial": { "type": "string" },
        "hidden_on": { "$ref": "#/$defs/hidden_on" },
        "pinned": { "type": "string", "enum": ["left", "right"] },
        "summary": { "type": "string", "enum": ["sum", "avg", "count"] }
      },
      "required": ["field"],
      "additionalProperties": false
    },

    "show_field": {
      "description": "Field in show section. Regular field (has 'field' key), divider (type: divider), or info (type: info).",
      "type": "object",
      "properties": {
        "field": { "type": "string" },
        "label": { "type": "string" },
        "renderer": { "type": "string" },
        "options": { "type": "object" },
        "partial": { "type": "string" },
        "col_span": { "type": "integer", "minimum": 1 },
        "hidden_on": { "$ref": "#/$defs/hidden_on" },
        "type": { "type": "string", "enum": ["divider", "info"] },
        "text": { "type": "string" }
      },
      "additionalProperties": false
    },

    "form_field": {
      "description": "Field in form section. Regular field (has 'field' key), divider (type: divider), or info (type: info).",
      "type": "object",
      "properties": {
        "field": { "type": "string" },
        "label": { "type": "string" },
        "input_type": { "type": "string" },
        "placeholder": { "type": "string" },
        "autofocus": { "type": "boolean" },
        "prefix": { "type": "string" },
        "suffix": { "type": "string" },
        "col_span": { "type": "integer", "minimum": 1 },
        "hint": { "type": "string" },
        "readonly": { "type": "boolean" },
        "visible_when": { "$ref": "#/$defs/condition" },
        "disable_when": { "$ref": "#/$defs/condition" },
        "default": {},
        "input_options": { "type": "object" },
        "options": { "type": "object" },
        "renderer": { "type": "string" },
        "partial": { "type": "string" },
        "hidden_on": { "$ref": "#/$defs/hidden_on" },
        "type": { "type": "string", "enum": ["divider", "info"] },
        "text": { "type": "string" }
      },
      "additionalProperties": false
    },

    "show_section": {
      "description": "Section in show layout. Regular section (has 'section' + optional 'fields') or association_list (type: association_list).",
      "type": "object",
      "properties": {
        "section": { "type": "string" },
        "type": { "type": "string", "enum": ["association_list"] },
        "columns": { "type": "integer", "minimum": 1 },
        "description": { "type": "string" },
        "responsive": { "type": "object" },
        "visible_when": { "$ref": "#/$defs/condition" },
        "disable_when": { "$ref": "#/$defs/condition" },
        "fields": {
          "type": "array",
          "items": { "$ref": "#/$defs/show_field" }
        },
        "association": { "type": "string" },
        "display_template": { "type": "string" },
        "link": { "type": "boolean" },
        "sort": { "type": "object" },
        "limit": { "type": "integer" },
        "empty_message": { "type": "string" },
        "scope": { "type": "string" }
      },
      "required": ["section"],
      "additionalProperties": false
    },

    "form_section": {
      "description": "Section in form layout. Regular section (has 'title' + 'fields') or nested_fields (type: nested_fields).",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["nested_fields"] },
        "columns": { "type": "integer", "minimum": 1 },
        "description": { "type": "string" },
        "responsive": { "type": "object" },
        "collapsible": { "type": "boolean" },
        "collapsed": { "type": "boolean" },
        "visible_when": { "$ref": "#/$defs/condition" },
        "disable_when": { "$ref": "#/$defs/condition" },
        "fields": {
          "type": "array",
          "items": { "$ref": "#/$defs/form_field" }
        },
        "association": { "type": "string" },
        "allow_add": { "type": "boolean" },
        "allow_remove": { "type": "boolean" },
        "min": { "type": "integer" },
        "max": { "type": "integer" },
        "add_label": { "type": "string" },
        "empty_message": { "type": "string" },
        "sortable": {}
      },
      "required": ["title"],
      "additionalProperties": false
    },

    "action": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["built_in", "custom"] },
        "label": { "type": "string" },
        "icon": { "type": "string" },
        "confirm": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "string" },
            {
              "type": "object",
              "properties": {
                "except": { "type": "array", "items": { "type": "string" } },
                "only": { "type": "array", "items": { "type": "string" } }
              },
              "additionalProperties": false
            }
          ]
        },
        "confirm_message": { "type": "string" },
        "style": { "type": "string" },
        "visible_when": { "$ref": "#/$defs/condition" },
        "disable_when": { "$ref": "#/$defs/condition" }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },

    "search_filter": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "label": { "type": "string" },
        "default": { "type": "boolean" },
        "scope": { "type": "string" }
      },
      "required": ["name", "label"],
      "additionalProperties": false
    },

    "default_sort": {
      "type": "object",
      "properties": {
        "field": { "type": "string" },
        "direction": { "type": "string", "enum": ["asc", "desc"] }
      },
      "required": ["field"],
      "additionalProperties": false
    },

    "index_config": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "default_view": { "type": "string" },
        "views_available": { "type": "array", "items": { "type": "string" } },
        "default_sort": { "$ref": "#/$defs/default_sort" },
        "per_page": { "type": "integer", "minimum": 1 },
        "table_columns": {
          "type": "array",
          "items": { "$ref": "#/$defs/table_column" }
        },
        "row_click": { "type": "string" },
        "empty_message": { "type": "string" },
        "actions_position": { "type": "string" },
        "includes": { "type": "array" },
        "eager_load": { "type": "array" }
      },
      "additionalProperties": false
    },

    "show_config": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "layout": {
          "type": "array",
          "items": { "$ref": "#/$defs/show_section" }
        },
        "includes": { "type": "array" },
        "eager_load": { "type": "array" }
      },
      "additionalProperties": false
    },

    "form_config": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "layout": { "type": "string" },
        "sections": {
          "type": "array",
          "items": { "$ref": "#/$defs/form_section" }
        },
        "includes": { "type": "array" },
        "eager_load": { "type": "array" }
      },
      "additionalProperties": false
    },

    "search_config": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "searchable_fields": {
          "type": "array",
          "items": { "type": "string" }
        },
        "placeholder": { "type": "string" },
        "predefined_filters": {
          "type": "array",
          "items": { "$ref": "#/$defs/search_filter" }
        }
      },
      "additionalProperties": false
    },

    "actions_config": {
      "type": "object",
      "properties": {
        "collection": {
          "type": "array",
          "items": { "$ref": "#/$defs/action" }
        },
        "single": {
          "type": "array",
          "items": { "$ref": "#/$defs/action" }
        },
        "batch": {
          "type": "array",
          "items": { "$ref": "#/$defs/action" }
        }
      },
      "additionalProperties": false
    }
  }
}
